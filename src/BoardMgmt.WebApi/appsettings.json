{
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost\\SQLEXPRESS;Database=BoardMgmtDb;User=sa;Password=Admin@123;Trusted_Connection=True;TrustServerCertificate=True;"
  },
  "Jwt": {
    "Issuer": "BoardMgmt",
    "Audience": "BoardMgmt.Client",
    "Key": "a-strong-random-secret-at-least-32-bytes",
    "ExpiryHours": "24"
  },
  "Uploads": {
    "Provider": "Local", // "Local" or "Disk"
    "PublicBase": "/uploads",
    "PhysicalRoot": "" // optional; empty => wwwroot/uploads
  },
  "Cors": { "AllowedOrigins": [ "http://localhost:4200" ] },

  "Serilog": {
    "Using": [ "Serilog.Sinks.MSSqlServer" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Information",
        "Microsoft.EntityFrameworkCore.Database.Command": "Information",
        "Microsoft.EntityFrameworkCore.Update": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "MSSqlServer",
        "Args": {
          "connectionString": "Server=localhost\\SQLEXPRESS;Database=BoardMgmtDb;User Id=sa;Password=Admin@123;TrustServerCertificate=True;",
          "tableName": "Logs",
          "schemaName": "dbo",
          "autoCreateSqlTable": true, // 👈 auto-create the table
          "batchPostingLimit": 50,
          "period": "00:00:02"
        }
      },
      { "Name": "Console" } // also keep console logs
    ],
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ]
  },


  "Seed": {
    "AdminEmail": "admin@flora.local",
    "AdminPassword": "Admin@123"
  },
  "AllowedHosts": "*"
}